<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/colorPrimaryDark"
    android:backgroundTint="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtnameproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtprecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/txtnameproduct"

                android:text="Precio"
                android:textColor="@color/cardview_light_background"
                android:textSize="16sp" />


            <TextView

                android:id="@+id/txtdescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtprecio"
                android:layout_marginBottom="8dp"
                android:paddingTop="20dp"
                android:text="Descripcion"
                android:textColor="@color/cardview_light_background"
                android:textSize="16sp" />

            <View
                android:id="@+id/linea"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/txtdescripcion"
                android:background="#bdbdbd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linea"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/background_light"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:drawableStart="@android:drawable/btn_star"
                    android:text="Favorito"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/btnArchive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimaryDark"
                    android:drawableEnd="@android:drawable/sym_contact_card"
                    android:text="Archivar"
                    android:textColor="@color/cardview_light_background" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>
